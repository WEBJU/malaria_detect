<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/top_bg"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/blue_primary"
            android:text="We are glad to hear your feedback"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Writer your feedback"
            android:textSize="14sp"
            android:textColor="@color/blue_primary"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:hint="Let us know how Malaria detect helped you."
            android:id="@+id/etFeedback"
            android:background="@drawable/textarea"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/btn_bg"
            android:text="Send"
            android:id="@+id/btnSend"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/background_trim_blue"
            android:text="View TREATMENT REPORTS"
            android:id="@+id/btnReport"
            android:textColor="@color/blue_primary"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>